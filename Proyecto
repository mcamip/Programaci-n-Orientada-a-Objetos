class cliente: 
    def __init__(self): 
        self.nombre= input("Digites sus nombres: ")
        self.apellidos= input("Digite sus apellidos: ")
        self.numCelular= int(input("Digite su nomero de celular: "))
        self.correoelectronico = input("Digite su correo electronico: ")

